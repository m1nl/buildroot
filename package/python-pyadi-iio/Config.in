config BR2_PACKAGE_PYTHON_PYADI_IIO
	bool "python-pyadi-iio"
    depends on BR2_PACKAGE_PYTHON_NUMPY_ARCH_SUPPORTS # python-numpy
    depends on BR2_TOOLCHAIN_USES_GLIBC || BR2_TOOLCHAIN_USES_MUSL # python-numpy
    depends on BR2_TOOLCHAIN_GCC_AT_LEAST_9 # python-numpy
    depends on BR2_HOST_GCC_AT_LEAST_9 # host-python-numpy
    select BR2_PACKAGE_PYTHON_NUMPY # runtime
    select BR2_PACKAGE_LIBIIO_BINDINGS_PYTHON
	help
      Analog Devices python interfaces for hardware with Industrial I/O drivers

	  https://github.com/analogdevicesinc/pyadi-iio
